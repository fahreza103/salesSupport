<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="@color/lightGray" />
            <stroke
                android:width="1dp"
                android:color="@color/darkBlack" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/btnColor" />
            <stroke
                android:width="1dp"
                android:color="@color/lightGray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/lightBlue"
                android:endColor="@color/darkBlue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/lightGray" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>