<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sales_txt_salesrefferal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:text="@string/fragment_sales_salesrefferal"
        android:textStyle="bold"
        android:textSize="33dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <View
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLogo"
        android:layout_width="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sales_txt_sales_agent_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".50"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/fragment_sales_agent_code"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/sales_editText_sales_agent_code"
                        android:layout_width="match_parent"
                        android:layout_weight=".50"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginTop="5dp"
                        android:inputType="textShortMessage"
                        android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sales_txt_sales_agent_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:layout_marginLeft="10dp"
                        android:text="@string/fragment_sales_agent_name"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black" />


                    <EditText
                        android:id="@+id/sales_editText_sales_agent_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_txt_event_rep_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_marginLeft="10dp"
                    android:text="@string/fragment_sales_event_rep_id"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/sales_editText_event_rep_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:ems="10"
                    android:inputType="textShortMessage"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_txt_customer_reff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_marginLeft="10dp"
                    android:text="@string/fragment_sales_customer_ref_id"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/sales_editText_customer_reff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:ems="10"
                    android:inputType="textShortMessage"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_txt_know_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_marginLeft="10dp"
                    android:text="@string/fragment_sales_know_us"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/sales_spinner_know_us"
                    android:layout_width="match_parent"
                    android:spinnerMode="dropdown"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spinner_bg"
                    android:layout_weight=".50"
                    android:paddingBottom="10dp"
                    android:entries="@array/customer_reff_arrays"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sales_txt_promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_marginLeft="10dp"
                    android:text="@string/fragment_sales_promo_code"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/sales_editText_promo_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:ems="10"
                    android:inputType="textShortMessage"
                    android:text="" />

            </LinearLayout>


        <Button
            android:id="@+id/sales_btn_confirm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            android:text="@string/button_confirm" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>