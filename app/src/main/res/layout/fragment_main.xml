<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_main_layout_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <id.co.myrepublic.salessupport.widget.CustomEditText
            android:id="@+id/custom_edittext_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:validator="required"
            app:labelText="Name"
            app:inputType="text"
        />

        <id.co.myrepublic.salessupport.widget.CustomEditText
            android:id="@+id/custom_edittext_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:validator="required"
            app:labelText="Phone"
            app:inputType="phone"
            />

        <id.co.myrepublic.salessupport.widget.CustomEditText
            android:id="@+id/custom_edittext_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:validator="required,email"
            app:labelText="Email"
            app:inputType="text"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/btnColor"
            android:text="@string/activity_login_retry" />

        <ImageView
            android:id="@+id/content_main_image_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/mr_logo" />

        <ImageView
            android:id="@+id/content_main_image_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/sales_logo" />
    </LinearLayout>

</LinearLayout>